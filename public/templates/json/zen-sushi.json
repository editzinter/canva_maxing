{
    "version": "3.0",
    "id": "zen-sushi",
    "name": "Zen Sushi",
    "meta": {
        "category": "Restaurant",
        "orientation": "portrait"
    },
    "tokens": {
        "colors": {
            "primary": "#2c2c2c",
            "secondary": "#6b6b6b",
            "accent": "#d64045",
            "background": "#f4f1ea",
            "muted": "#e5e2db"
        },
        "fonts": {
            "heading": "Cinzel",
            "body": "Manrope"
        }
    },
    "components": {
        "pageTitle": {
            "type": "text",
            "props": {
                "fontSize": 48,
                "fontFamily": "$fonts.heading",
                "color": "$colors.accent",
                "textAlign": "center"
            }
        },
        "subtitle": {
            "type": "text",
            "props": {
                "fontSize": 12,
                "fontFamily": "$fonts.body",
                "color": "$colors.secondary",
                "textAlign": "center",
                "charSpacing": 200
            }
        },
        "sectionTitle": {
            "type": "text",
            "props": {
                "fontSize": 22,
                "fontFamily": "$fonts.heading",
                "color": "$colors.accent"
            }
        },
        "menuItem": {
            "type": "text",
            "props": {
                "fontSize": 15,
                "fontFamily": "$fonts.body",
                "color": "$colors.primary"
            }
        },
        "description": {
            "type": "text",
            "props": {
                "fontSize": 11,
                "fontFamily": "$fonts.body",
                "color": "$colors.secondary",
                "lineHeight": 1.4
            }
        },
        "divider": {
            "type": "shape",
            "props": {
                "shape": "rect",
                "fill": "$colors.accent",
                "height": 2
            }
        },
        "thinDivider": {
            "type": "shape",
            "props": {
                "shape": "rect",
                "fill": "$colors.muted",
                "height": 1
            }
        }
    },
    "pages": [
        {
            "id": "cover",
            "background": "$colors.background",
            "layout": "centered",
            "padding": 60,
            "gap": 16,
            "children": [
                {
                    "type": "text",
                    "props": {
                        "content": "OMAKASE & SAKE",
                        "fontSize": 14,
                        "fontFamily": "$fonts.body",
                        "fontWeight": "bold",
                        "color": "$colors.accent",
                        "textAlign": "center",
                        "charSpacing": 300
                    }
                },
                {
                    "type": "text",
                    "props": {
                        "content": "ZEN\nSUSHI",
                        "fontSize": 72,
                        "fontFamily": "$fonts.heading",
                        "color": "$colors.primary",
                        "textAlign": "center",
                        "lineHeight": 0.95
                    }
                },
                {
                    "use": "divider"
                },
                {
                    "use": "subtitle",
                    "props": {
                        "content": "AUTHENTIC JAPANESE CUISINE"
                    }
                }
            ]
        },
        {
            "id": "omakase",
            "background": "$colors.background",
            "layout": "stack",
            "padding": 40,
            "gap": 18,
            "children": [
                {
                    "use": "pageTitle",
                    "props": {
                        "content": "CHEF'S OMAKASE"
                    }
                },
                {
                    "use": "subtitle",
                    "props": {
                        "content": "LET THE CHEF DECIDE YOUR JOURNEY"
                    }
                },
                {
                    "use": "thinDivider"
                },
                {
                    "layout": "stack",
                    "gap": 6,
                    "children": [
                        {
                            "use": "menuItem",
                            "props": {
                                "content": "Sakura Set — $85"
                            }
                        },
                        {
                            "use": "description",
                            "props": {
                                "content": "7-course seasonal selection with premium nigiri"
                            }
                        }
                    ]
                },
                {
                    "layout": "stack",
                    "gap": 6,
                    "children": [
                        {
                            "use": "menuItem",
                            "props": {
                                "content": "Momiji Set — $120"
                            }
                        },
                        {
                            "use": "description",
                            "props": {
                                "content": "10-course experience with wagyu and uni"
